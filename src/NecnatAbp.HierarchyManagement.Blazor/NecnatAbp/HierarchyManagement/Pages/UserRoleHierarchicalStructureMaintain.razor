@page "/HierarchyManagement/UserRoleHierarchicalStructure/Maintain"
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.Extensions.Localization
@using NecnatAbp.PageBases
@using NecnatAbp.HierarchyManagement
@using NecnatAbp.HierarchyManagement.Components
@using NecnatAbp.HierarchyManagement.Permissions
@using Volo.Abp.Application.Dtos
@using global::NecnatAbp.HierarchyManagement.Localization
@inject IStringLocalizer<HierarchyManagementResource> LL
@inherits CreateUpdatePageBase<IUserRoleHierarchicalStructureAppService, UserRoleHierarchicalStructureDto, Guid, PagedAndSortedResultRequestDto, CreateUpdateUserRoleHierarchicalStructureDto, UserRoleHierarchicalStructureResultRequestDto>

<div class="container">
    <div class="page-title">@(EntityId == Guid.Empty ? @LL["Create"] : @LL["Edit"]) @LL["Hierarchical Access"]</div>
    <Card>
        <CardBody>
            @if(Entity != null)
            {
                <UserRoleHierarchicalStructureCreateUpdate
                    ValidationsRef="@ValidationsRef"
                    Entity="@Entity"
                    HierarchicalStructureTreePermissionFilter="@(EntityId == Guid.Empty ? CreatePolicyName : UpdatePolicyName)" />
            }
        </CardBody>
    </Card>
    <div class="div-float-buttons">
        <Button Class="float-end" Color="Color.Primary" Clicked="@(EntityId == Guid.Empty ? CreateEntityAsync : UpdateEntityAsync)">Salvar</Button>
        <Button Class="float-start" Color="Color.Secondary" Outline Clicked="@ToBackPage">Cancelar</Button>
     </div>
 </div>

 @namespace NecnatAbp.HierarchyManagement.Pages
 @code {

    public UserRoleHierarchicalStructureMaintain()
    {
        CreatePolicyName = HierarchyManagementPermissions.UserRoleHierarchicalStructure.Create;
        UpdatePolicyName = HierarchyManagementPermissions.UserRoleHierarchicalStructure.Update;
    }

    protected async override Task OnInitializedAsync()
    {
        var uri = NavigationManager!.ToAbsoluteUri(NavigationManager.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("id", out var id))
        {
            EntityId = new Guid(id!);
        }

        if (EntityId != Guid.Empty)
        {
            var dto = await AppService!.GetAsync(EntityId);
            Entity = ObjectMapper.Map<UserRoleHierarchicalStructureDto, CreateUpdateUserRoleHierarchicalStructureDto>(dto);
        }
        else
        {
            Entity = new CreateUpdateUserRoleHierarchicalStructureDto();
        }

        await base.OnInitializedAsync();
    }
}